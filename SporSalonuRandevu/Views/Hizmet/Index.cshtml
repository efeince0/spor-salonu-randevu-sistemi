@model List<SporSalonuRandevu.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<h2>Hizmetler</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Süre (dk)</th>
            <th>Ücret (₺)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hizmet in Model)
        {
            <tr>
                <td>@hizmet.Ad</td>
                <td>@hizmet.SureDakika</td>
                <td>@hizmet.Ucret</td>
            </tr>
        }
    </tbody>
</table>
