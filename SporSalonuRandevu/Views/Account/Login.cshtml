@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>

<form method="post">
    <div class="mb-3">
        <label>Email</label>
        <input name="email" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Şifre</label>
        <input name="password" type="password" class="form-control" />
    </div>

    <button class="btn btn-primary">Giriş Yap</button>

    <p class="text-danger">@ViewBag.Hata</p>
</form>
