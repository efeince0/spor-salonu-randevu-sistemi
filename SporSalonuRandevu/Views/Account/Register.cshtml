@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>Kayıt Ol</h2>

<form method="post">
    <div class="mb-3">
        <label>Ad Soyad</label>
        <input name="adSoyad" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input name="email" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Şifre</label>
        <input name="password" type="password" class="form-control" />
    </div>

    <button class="btn btn-success">Kayıt Ol</button>

    <p class="text-danger">@ViewBag.Hata</p>
</form>
