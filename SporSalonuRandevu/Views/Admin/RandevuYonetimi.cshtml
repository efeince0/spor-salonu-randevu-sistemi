@model List<Randevu>

<h2>Randevu Yönetimi</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Uye.AdSoyad</td>
                <td>@r.Antrenor.AdSoyad</td>
                <td>@r.Hizmet.Ad</td>
                <td>@r.Tarih.ToShortDateString()</td>
                <td>@r.Saat</td>
                <td>
                    @if (r.Durum == RandevuDurumu.Beklemede)
                    {
                        <span class="badge bg-warning">Beklemede</span>
                    }
                    else if (r.Durum == RandevuDurumu.Onaylandi)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">İptal</span>
                    }
                </td>
                <td>
                    @if (r.Durum == RandevuDurumu.Beklemede)
                    {
                        <a asp-action="RandevuOnayla"
                           asp-route-id="@r.Id"
                           class="btn btn-success btn-sm">
                            Onayla
                        </a>

                        <a asp-action="RandevuIptal"
                           asp-route-id="@r.Id"
                           class="btn btn-danger btn-sm">
                            İptal
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
