@model List<SporSalonuRandevu.Models.Antrenor>

<h2>Antrenörler</h2>

<a class="btn btn-success mb-3" asp-action="AntrenorEkle">Yeni Antrenör</a>

<table class="table table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <th>Uzmanlık</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var a in Model)
    {
        <tr>
            <td>@a.AdSoyad</td>
            <td>@a.Uzmanlik</td>
            <td>
                <a class="btn btn-warning btn-sm"
                   asp-action="AntrenorGuncelle"
                   asp-route-id="@a.Id">Güncelle</a>

                <a class="btn btn-danger btn-sm"
                   asp-action="AntrenorSil"
                   asp-route-id="@a.Id"
                   onclick="return confirm('Silinsin mi?')">Sil</a>
            </td>
        </tr>
    }
</table>
